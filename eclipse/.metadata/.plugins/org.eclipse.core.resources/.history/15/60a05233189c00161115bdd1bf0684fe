package com.hzy.alchemycraft.items;

import com.hzy.alchemycraft.AlchemyCraft;
import com.hzy.alchemycraft.handler.LibHandler;
import com.hzy.alchemycraft.items.SettingMaterialBottle;
import net.minecraft.block.Block;
import net.minecraft.client.Minecraft;
import net.minecraft.client.resources.model.ModelResourceLocation;
import net.minecraft.item.Item;
import net.minecraftforge.fml.common.Mod.EventHandler;
import net.minecraftforge.fml.common.registry.GameRegistry;

public class ACItems {
	

	public ACItems(){
		
	}
	//setting  Potion
	   
	public static Item MinorHealingPotion = new ItemPotionSetting("MinorHealingPotion");		
    public static Item ElixirofMinorFortitude = new ItemPotionSetting("ElixirofMinorFortitude");
    public static Item ElixirofMinorAgility = new ItemPotionSetting("ElixirofMinorAgility");	
    public static Item ElixirofMinorDefense = new ItemPotionSetting("ElixirofMinorDefense");	
    public static Item ElixirofMinorStrength = new ItemPotionSetting("ElixirofMinorStrength");	
    public static Item ElixirofMinorInvisibility = new ItemPotionSetting("ElixirofMinorInvisibility");		
    public static Item ElixirofMinorWaterBreathing = new ItemPotionSetting("ElixirofMinorWaterBreathing");	
    public static Item ElixirofMinorNightVision = new ItemPotionSetting("ElixirofMinorNightVision");		    
    
    public static Item HealingPotion = new ItemPotionSetting("HealingPotion");					
    public static Item FortitudePotion = new ItemPotionSetting("FortitudePotion");				
    public static Item AgilityPotion = new ItemPotionSetting("AgilityPotion");					
    public static Item DefensePotion = new ItemPotionSetting("DefensePotion");					
    public static Item StrengthPotion = new ItemPotionSetting("StrengthPotion");				
    public static Item InvisibilityPotion = new ItemPotionSetting("InvisibilityPotion");		
    public static Item WaterBreathingPotion = new ItemPotionSetting("WaterBreathingPotion");	
    public static Item NightVisionPotion = new ItemPotionSetting("NightVisionPotion");			
    public static Item FrostOilBottle= new ItemPotionSetting("FrostOilBottle");
    public static Item FireResistancePotion = new ItemPotionSetting("FireResistancePotion");     
    public static Item PurifyPotion = new ItemPotionSetting("PurifyPotion");					
    public static Item LovePotion = new ItemPotionSetting("LovePotion");	
    
    public static Item RegenerationPotion = new ItemPotionSetting("RegenerationPotion"); 
    public static Item FishOilBottle = new ItemPotionSetting("FishOilBottle"); 	     
    public static Item CorpseOilBottle= new ItemPotionSetting("CorpseOilBottle");    
    public static Item WitherOilBottle= new ItemPotionSetting("WitherOilBottle");     
    public static Item YinYangOilBottle = new ItemPotionSetting("YinYangOilBottle");  
    public static Item FireOilBottle = new ItemPotionSetting("FireOilBottle");		   
    public static Item GrowthOilBottle = new ItemPotionSetting("GrowthOilBottle");   
    public static Item ConversionOilBottle= new ItemPotionSetting("ConversionOilBottle"); 
    public static Item PoisonOilBottle=new ItemPotionSetting("PoisonOilBottle");		
    public static Item PsychePotion =new ItemPotionSetting("PsychePotion");
    public static Item FlyingPotion =new ItemPotionSetting("FlyingPotion");
    public static Item ProdigyOilBottle =new ItemPotionSetting("ProdigyOilBottle");

	
	
	//setting  Bottle
    public static Item DistilledBottle = new DistilledBottle();
    public static Item PotionDistilledBottle = new PotionDistilledBottle();
    public static Item FullDistilledBottle = new Item().setMaxStackSize(1).setCreativeTab(AlchemyCraft.alchemycraftTab).setUnlocalizedName("FullDistilledBottle");
    public static Item DistilledMaterialBottle[] = new Item[LibHandler.Recipes.length];
  
    //Setting Philosopher's Stone
    public static Item HigherPhilosopherStone = new HigherPhilosopherStone();
	public static Item PhilosopherStone = new PhilosopherStone();
	
	//Setting ingot
    public static Item ingotTin=new IngotSetting("ingotTin");
    public static Item ingotCopper=new IngotSetting("ingotCopper");
    public static Item ingotLead=new IngotSetting("ingotLead");
    public static Item ingotBaseMetal=new IngotSetting("ingotBaseMetal");
    public static Item baseMetalMixture=new IngotSetting("baseMetalMixture");
    public static Item ingotPreciousMetal=new IngotPreciousMetal();
	
    //Setting others item
    public static Item plantMutandis =new PlantMutandis();
    public static Item AlchemyBook = new ACBook();
    public static Item Soul = new Soul();
    
    //Setting nuggets
    public static Item nuggetIron=new IngotSetting("nuggetIron");
    public static Item nuggetTin=new IngotSetting("nuggetTin");
    public static Item nuggetCopper=new IngotSetting("nuggetCopper");
    public static Item nuggetLead=new IngotSetting("nuggetLead");
    
    @EventHandler
   	public static void registerItems(){
    	
    	registerItem(MinorHealingPotion,"");
    	registerItem(ElixirofMinorFortitude,"");
    	registerItem(ElixirofMinorAgility,"");
    	registerItem(ElixirofMinorDefense,"");
    	registerItem(ElixirofMinorStrength,"");
    	registerItem(ElixirofMinorInvisibility,"");
    	registerItem(ElixirofMinorWaterBreathing,"");
    	registerItem(ElixirofMinorNightVision,"");
        
    	registerItem(HealingPotion,"");		
    	registerItem(FortitudePotion,"");		
    	registerItem(AgilityPotion,"");			
    	registerItem(DefensePotion,"");			
    	registerItem(StrengthPotion,"");			
    	registerItem(InvisibilityPotion,"");	
    	registerItem(WaterBreathingPotion,"");
    	registerItem(NightVisionPotion,"");			
    	registerItem(FrostOilBottle,"");
    	registerItem(FireResistancePotion,"");  
    	registerItem(PurifyPotion,"");		
    	registerItem(LovePotion,"");
    	registerItem(RegenerationPotion,"");
    	registerItem(FishOilBottle,"");	     
    	registerItem(CorpseOilBottle,"");    
    	registerItem(WitherOilBottle,"");    
    	registerItem(YinYangOilBottle,"");  
    	registerItem(FireOilBottle,"");	   
    	registerItem(GrowthOilBottle,"");
    	registerItem(ConversionOilBottle,"");
    	registerItem(PoisonOilBottle,"");	
    	registerItem(PsychePotion,"");
    	registerItem(FlyingPotion,"");
    	registerItem(ProdigyOilBottle,"");
    	
    	registerItem(PotionDistilledBottle,"");
    	registerItem(DistilledBottle,"");
    	registerItem(FullDistilledBottle,"");
    	for(int i=0;i<DistilledMaterialBottle.length;i++){
    		DistilledMaterialBottle[i] =new SettingMaterialBottle(i);
    		registerItem(DistilledMaterialBottle[i],"_"+i);
    	}
    	
    	registerItem(HigherPhilosopherStone,"");
    	registerItem(PhilosopherStone,"");
    	
    	registerItem(ingotTin,"");
    	registerItem(ingotCopper,"");
    	registerItem(ingotLead,"");
    	registerItem(ingotBaseMetal,"");
    	registerItem(baseMetalMixture,"");
    	registerItem(ingotPreciousMetal,"");
    	
    	registerItem(nuggetIron,"");
    	registerItem(nuggetTin,"");
    	registerItem(nuggetCopper,"");
    	registerItem(nuggetLead,"");
    	
    	registerItem(AlchemyBook,"");
    	registerItem(Soul,"");
        
    	registerItem(plantMutandis,"");
    }
    public static void registerRenders(){
    	registerRender(MinorHealingPotion);
    	registerRender(ElixirofMinorFortitude);
    	registerRender(ElixirofMinorAgility);
    	registerRender(ElixirofMinorDefense);
    	registerRender(ElixirofMinorStrength);
    	registerRender(ElixirofMinorInvisibility);
    	registerRender(ElixirofMinorWaterBreathing);
    	registerRender(ElixirofMinorNightVision);
        
    	registerRender(HealingPotion);		
    	registerRender(FortitudePotion);		
    	registerRender(AgilityPotion);			
    	registerRender(DefensePotion);			
    	registerRender(StrengthPotion);			
    	registerRender(InvisibilityPotion);	
    	registerRender(WaterBreathingPotion);
    	registerRender(NightVisionPotion);			
    	registerRender(FrostOilBottle);
    	registerRender(FireResistancePotion);  
    	registerRender(PurifyPotion);		
    	registerRender(LovePotion);
    	
    	registerRender(RegenerationPotion);
    	registerRender(FishOilBottle);	     
    	registerRender(CorpseOilBottle);    
    	registerRender(WitherOilBottle);    
    	registerRender(YinYangOilBottle);  
    	registerRender(FireOilBottle);	   
    	registerRender(GrowthOilBottle);
    	registerRender(ConversionOilBottle);
    	registerRender(PoisonOilBottle);	
    	registerRender(PsychePotion);
    	registerRender(FlyingPotion);
    	registerRender(ProdigyOilBottle);
    	
    	registerRender(PotionDistilledBottle);
    	registerRender(DistilledBottle);
    	registerRender(FullDistilledBottle);
    	for(int i=0;i<DistilledMaterialBottle.length;i++){
    		registerRender(DistilledMaterialBottle[i],"_0");
    	}
    	
    	registerRender(ingotTin);
    	registerRender(ingotCopper);
    	registerRender(ingotLead);
    	registerRender(ingotBaseMetal);
    	registerRender(baseMetalMixture);
    	registerRender(ingotPreciousMetal);
    	
    	registerRender(nuggetIron);
    	registerRender(nuggetTin);
    	registerRender(nuggetCopper);
    	registerRender(nuggetLead);
    	
    	registerRender(HigherPhilosopherStone);
    	registerRender(PhilosopherStone);
    	
    	registerRender(Soul);
    	registerRender(AlchemyBook);
    	registerRender(plantMutandis);
    }
    public static void registerItem(Item item,String meta){
    	GameRegistry.registerItem(item,item.getUnlocalizedName().substring(5)+meta);
    }
	public static void registerRender(Item item,String meta){
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher()
	    .register(item, 0, new ModelResourceLocation(AlchemyCraft.MODID+":"+item.getUnlocalizedName().substring(5)+meta, "inventory"));	
	}
	public static void registerRender(Item item){
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher()
	    .register(item, 0, new ModelResourceLocation(AlchemyCraft.MODID+":"+item.getUnlocalizedName().substring(5), "inventory"));	
	}

}
